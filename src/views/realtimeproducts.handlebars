<div class="container">
    <div id="contenido" class="row"></div>
        <div class="row my-5"> 
            <div class="col-md-6">
                <h2>Agregar Producto</h2>
                <form>
                    <div class="mb-3">
                        <label for="title" class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="title" placeholder="Ingrese un Titulo" {{isRequired true}}>
                    </div>
                    <div class="mb-3"> 
                        <label for="description" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="description" placeholder="Ingrese una Descripcion" {{isRequired true}}>
                    </div>
                    <div class="mb-3">
                        <label for="code" class="form-label">Codigo</label>
                        <input type="text" class="form-control" id="code" placeholder="Ingrese un Codigo" {{isRequired true}}>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="price" placeholder="Ingrese un Precio" {{isRequired true}}>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Categoria</label>
                        <input type="text" class="form-control" id="category" placeholder="Ingrese una Categoria" {{isRequired true}}>
                    </div>
                    <div class="mb-3">
                        <label for="thumbnails" class="form-label">Imagen</label>
                        <input type="text" class="form-control" id="thumbnails" placeholder="Ingrese Link de la imagen" {{isRequired true}}> 
                    </div>
                    <button type="button" class="btn btn-primary" onclick="addProducto()">Enviar</button>
                </form>
                <div id="alerta1" class="my-3"></div>
            </div> 
            <div class="col-md-6">
                <h2>Eliminar Producto</h2>
                <form> 
                    <div class="mb-3">
                        <label for="product_id" class="form-label">#Producto</label>
                        <select id="product_id" class="form-control"></select>
                    </div>
                    <button type="button" class="btn text-white bg-black" onclick="deleteProducto()">Enviar</button>
                </form>
                <div id="alerta2" class="my-3"></div>
            </div>
        </div>
</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproducts.js"></script>
