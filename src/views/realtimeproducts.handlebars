<div class="container">
    <div id="contenido" class="row"></div>
        <div class="row my-5"> 
            <div class="col-md-6">
                <h2>Agregar Producto</h2>
                <form>
                    <div class="mb-3">
                        <label for="title" class="form-label">Titulo</label>
                        <input type="text" class="form-control" id="title required>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Descripcion</label>
                        <input type="text" class="form-control" id="description" required>
                    </div>
                    <div class="mb-3">
                        <label for="code" class="form-label">Codigo</label>
                        <input type="text" class="form-control" id="code" required>
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label">Precio</label>
                        <input type="text" class="form-control" id="price" required>
                    </div>
                    <div class="mb-3">
                        <label for="category" class="form-label">Categoria</label>
                        <input type="text" class="form-control" id="category" required>
                    </div>
                    <div class="mb-3">
                        <label for="thumbnails" class="form-label">Imagen</label>
                        <input type="text" class="form-control" id="thumbnails">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="addProducto()">Enviar</button>
                </form>
                <div id="alerta1" class="my-3"></div>
            </div>
            <div class="col-md-6">
                <h2>Eliminar Producto</h2>
                <form>
                    <div class="mb-3">
                        <label for="product_id" class="form-label">#Producto</label>
                        <select id="product_id" class="form-control"></select>
                    </div>
                    <button type="button" class="btn text-white bg-black" onclick="deleteProducto()">Enviar</button>
                </form>
                <div id="alerta2" class="my-3"></div>
            </div>
        </div>
</div>


