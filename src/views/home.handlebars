<div class="container">
    <div class="row">
        {{#each products}}
            <div class="col-md-3">
                <div class="card text-center" style="width: 18rem;">
                    <img src="{{this.thumbnails}}" class="img-fluid" alt="{{this.title}}">
                    <div class="card-body">
                        <p class="card-text fw-medium">{{this.title}}</p>
                        <p class="card-text">${{this.price}} ARS</p>
                    </div>
                </div>
            </div>
        {{/each}} 
    </div>
</div>